<UserControl
    x:Class="SnakeAvalonia.Views.LevelSelectView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Spacing="15">

        <TextBlock Text="Válassz pályát:"
                   FontSize="26"
                   HorizontalAlignment="Center"/>

        <Button Content="Pálya 1"
                Command="{Binding StartLevelCommand}"
                CommandParameter="lvl1.txt"/>

        <Button Content="Pálya 2"
                Command="{Binding StartLevelCommand}"
                CommandParameter="lvl2.txt"/>

        <Button Content="Pálya 3"
                Command="{Binding StartLevelCommand}"
                CommandParameter="lvl3.txt"/>
    </StackPanel>

</UserControl>