<Window x:Class="masodikbeadando.LevelSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pályaválasztás" Height="200" Width="300">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Válassz pályát:" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        <Button Content="Stage 1" Width="150" Margin="0,0,0,10" Click="Stage1_Click"/>
        <Button Content="Stage 2" Width="150" Margin="0,0,0,10" Click="Stage2_Click"/>
        <Button Content="Stage 3" Width="150" Margin="0,0,0,10" Click="Stage3_Click"/>
    </StackPanel>
</Window>
